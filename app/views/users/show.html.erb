
  <center>
  <h1>Hi <%= current_user.first_name %> ! </h1>

  <%= link_to 'edit', edit_user_path, :class => "btn btn-success btn-sm" %>



  <% if current_user.nest == nil %>
     <%= link_to 'share your nest', new_nest_path(current_user), :class => "btn btn-info btn-sm" %>
