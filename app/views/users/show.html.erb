       <%= link_to 'show your nest', nest_path(current_user.nest), :class => " btn btn-outline-secondary" %>
      <%= link_to 'delete your nest', nest_path(current_user.nest), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
  </center>




