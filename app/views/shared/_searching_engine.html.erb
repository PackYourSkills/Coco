
<form class="form-inline" action='/nests' method='get'>
  <div class="form-group">
    <label for="search_address">Address</label>
    <input type="text" class="form-control" id="search_address" placeholder="street, city">
  </div>
  <div class="form-group">
    <label for="radius">Distance from the address</label>
    <div class="input-group">
      <input type="text" class="form-control" id="radius" placeholder="in a radius of ..">
      <div class="input-group-addon">km</div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">GoCoco</button>
</form>
