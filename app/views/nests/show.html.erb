<div class="container text-center">
  <% if user_signed_in? %>
    <% if current_user.id == @nest.user_id %>
      <h1>Welcome home <%= current_user.first_name %> ! </h1>
    <% else %>
      <h1>Hi <%= current_user.first_name %> ! </h1>
    <% end %>
  <% else %>
    <h1>Hey buddy ! </h1>
  <% end %>
</div>

<p>Address of this nest <%= @nest.address %> - <%= @nest.city %></p>

<div id="map" style="width: 50%; height: 40vh;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

<% if user_signed_in? %>
  <% if current_user.id == @nest.user_id %>
    <%= link_to "delete my nest", nest_path(@nest), method: :delete, data: { confirm: "Are you sure?" } %>
        || <%= link_to 'edit', edit_nest_path(@nest) %>
        || <%= link_to "return to your profile", user_path(@user) %>
        || <%= link_to "manage avalabilities", nest_timeslots_path(@nest) %>
  <% end %>
<% end %>
